{
  "compilerOptions": {
    "target": "es6", 
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "paths": {
      "firebase/*": ["node_modules/firebase/*"],
      "emberfire": [ "addon" ],
      "emberfire/*": [ "addon/* "],
      "emberfire/authorizers/firebase": ["addon/authorizers/firebase"],
      "emberfire/authenticators/firebase": [ "addon/authenticators/firebase"],
      "emberfire/initializers/emberfire": [ "addon/initializers/emberfire"],
      "emberfire/services/firebase": [ "addon/services/firebase"],
      "*": [ "types/*" ]
    }
  },
  "include": [ "addon", "app", "types" ],
  "exclude": [ "node_modules", "**/*.spec.ts" ]
}